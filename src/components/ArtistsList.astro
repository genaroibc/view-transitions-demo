---
import { getArtists } from "@/services/getArtists"
import ArtistItem from "@/components/ArtistItem.astro"

const artists = await getArtists()
---

<section>
  <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-xl mx-auto p-4">
    {
      artists.map(artist => (
        <li>
          <ArtistItem avatar={artist.avatar} name={artist.name} />
        </li>
      ))
    }
  </ul>
</section>
